%{
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include "token-type.tab.h"   /* generated by bison -d */
%}

%%

[+>;]   { return yytext[0]; }
"for"   { return T_For; }
[0-9]+  { yylval.integerConstant = atoi(yytext);
          return T_IntConstant; }
[a-z]+  { yylval.identifier = strdup(yytext);
          return T_Identifier; }
%%

int yywrap(void) { return 1; }